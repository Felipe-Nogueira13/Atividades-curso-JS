//Como criar variaveis em JS

//let idade Variavel idade criado. porem sem valor ou tipo foi atribuido

let numero = 15 //Variavel numero criado com o valor 15 associado
//Numero = int

let preco = 9.99 //Preco = float ou double

let nome = "javascript" //Nome = str

console.log("\nHello Word!!!\n") //escrevendo no console

let meu_nome = "Felipe"

let minha_idade = 17

let localizacao = "São bernardo do campo"

console.log("\nMeu nome é " + meu_nome, "tenho "  + minha_idade + " anos e moro na cidade de",localizacao + ".\n")

//If, elif e else

let idade = 18

if (idade >= 18) {console.log("Sua idade é de: " + idade + " \nVoce é maior de idade.")}

else { console.log("Sua idade é de: " + idade + " \nVocê é menor de idade!")}

//exercicio

//importando a entrada de dados pelo o usuario
const readline = require("readline")

//comfigurando para a entrada do teclado
const rl = readline.createInterface ({
    input: process.stdin,
    output: process.stdout
})

//perguntando a entrada
rl.question("Digite a nota do aluno: ", function(nota){
    //Convertendo a entrada de str para int/float
    nota = Number(nota);
   
if (nota >=5 ) {
    console.log("APROVADO")
} else {
    console.log("REPROVADO")
}

rl.close();
})
