    rl.question('\nCadastre a sua senha: ', (senha_cadastro) => {
        console.log("\nAgora realize seu login!\n");

        let tentativas = 0;

        function tentarLogin() {
            if (tentativas >= 3) {
                console.log("\nAcesso negado por excesso de tentativas");
                rl.close();
                return;
            }

            rl.question('\nColoque seu ID: ', (ID_login) => {
                rl.question('\nColoque sua senha: ', (senha_login) => {
                    if (ID_login === ID_cadastro && senha_login === senha_cadastro) {
                        console.log("\nLogin realizado com sucesso!");
                        rl.close();
                    } else {
                        tentativas++;
                        console.log("\nLogin ou senha inválidos! Tente novamente!");
                        tentarLogin(); // chama novamente para nova tentativa
                    }
                });
            });
        }

        tentarLogin(); // inicia as tentativas de login
