                    rl.question('Qual o número de faltas do aluno? ', (faltas) => {
                        const num1 = parseFloat(N1);
                        const num2 = parseFloat(N2);
                        const num3 = parseFloat(N3);
                        const num4 = parseFloat(N4);
                        const total = parseInt(totalAulas);
                        const faltasNum = parseInt(faltas);
                        let media = (num1 + num2 + num3 + num4) / 4;
                        let percentualFaltas = (faltasNum / total) * 100;
                        let limiteFaltas = 25;
                        if (percentualFaltas >= limiteFaltas) {
                            console.log("\nO aluno esta reprovado por falta!");
                        } else if (media >= 6) {
                            console.log("\nO aluno está aprovado!");
                        } else {
                            console.log("\nO aluno está reprovado por nota!");
                        }
                    rl.close();
                    });
                });
